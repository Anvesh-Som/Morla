<?xml version='1.0'?>

<robot name="morla" xmlns:xacro="http://www.ros.org/wiki/xacro">
<xacro:include filename="$(find morla)/urdf/morla_urdf.gazebo" />


  <link name='robot_footprint'> </link>

  <joint name="robot_footprint_joint" type="fixed">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <parent link="robot_footprint"/>
    <child link="morla_chassis" />
  </joint>

  <link name='morla_chassis'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="5.1"/>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <inertia
          ixx="0.004889713" ixy="0" ixz="0"
          iyy="0.004008093" iyz="0"
          izz="0.008040018"
      />
    </inertial>

    <collision name='chassis_collision'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <box size="0.45469 0.28810 0.089"/>
      </geometry>
    </collision>

    <visual name='chassis_visual'>
      <origin xyz="0 0 0" rpy=" 0 0 0"/>
      <geometry>
        <mesh filename="package://morla/meshes/morla_final1.dae" scale="1 1 1"/>
      </geometry>
    </visual>
  </link>

  <link name='right_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="1.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='right_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://morla/meshes/wheel1.dae" scale="1 1 1"/>
        <!--<cylinder radius="0.065" length="0.015"/>-->
      </geometry>
    </collision>

    <visual name='right_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://morla/meshes/wheel1.dae" scale="1 1 1"/>
        <!--<cylinder radius="0.05" length="0.015"/>-->
      </geometry>
      <!--<material name="black"/>-->
    </visual>
  </link>

  <link name='left_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="1.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.000225" ixy="0" ixz="0"
          iyy="0.000225" iyz="0"
          izz="0.0004375"
      />
    </inertial>

    <collision name='left_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://morla/meshes/wheel1.dae" scale="1 1 1"/>
        <!--<cylinder radius="0.065" length="0.015"/>-->
      </geometry>
    </collision>

    <visual name='left_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://morla/meshes/wheel1.dae" scale="1 1 1"/>
        <!--<cylinder radius="0.05" length="0.015"/>-->
      </geometry>
      <!--<material name="black"/>-->
    </visual>
  </link>


    <link name='omni_wheel'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="1.35"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="0.0056" ixy="0" ixz="0"
          iyy="0.0056" iyz="0"
          izz="0.0056"
      />
    </inertial>

    <collision name='omni_wheel_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
    </collision>

    <visual name='omni_wheel_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <sphere radius="0.016"/>
      </geometry>
      <material name="black"/>
    </visual>
  </link>


<!-- links for sensors -->

  <link name='LIDAR'>
    <pose>0 0 0 0 0 0</pose>

    <inertial>
      <mass value="1e-5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia
          ixx="1e-6" ixy="0" ixz="0"
          iyy="1e-6" iyz="0"
          izz="1e-6"
      />
    </inertial>

    <collision name='LIDAR_collision'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
        <!--<mesh filename="package://morla/meshes/.dae"/>-->
      </geometry>
    </collision>

    <visual name='LIDAR_visual'>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.01 0.01 0.01"/>
        <!--<mesh filename="package://morla/meshes/hokuyo.dae"/>-->
      </geometry>
    </visual>
  </link>

<!-- joints -->

  <joint name="LIDAR_joint" type="fixed">
    <origin xyz="0 0 0.1" rpy="0 0 0"/>
    <parent link="morla_chassis"/>
    <child link="LIDAR"/>
  </joint>

 <joint type="continuous" name="right_wheel_hinge">
     <origin xyz="-0.0355 -0.097 -0.006" rpy="0 0 1.57"/>
     <child link="right_wheel"/>
     <parent link="morla_chassis"/>
     <axis xyz="0 0 1" rpy="0 0 0"/>
     <limit effort="10000" velocity="1000"/>
     <dynamics damping="1.0" friction="1.0"/>
 </joint>
 <joint type="continuous" name="left_wheel_hinge">
     <origin xyz="-0.0355 0.097 -0.006" rpy="0 0 -1.57"/>
     <child link="left_wheel"/>
     <parent link="morla_chassis"/>
     <axis xyz="1 0 0" rpy="0 0 0"/>
     <limit effort="10000" velocity="1000"/>
     <dynamics damping="1.0" friction="1.0"/>
  </joint>

  <joint type="continuous" name="omni_wheel_hinge">
    <origin xyz="0.133497 0 -0.024" rpy="0.000212 -0.118296 -0.001802"/>
    <child link="omni_wheel"/>
    <parent link="morla_chassis"/>
    <axis xyz="1 0 0" rpy="0 0 0"/>
    <limit effort="10000" velocity="1000"/>
    <dynamics damping="1.0" friction="1.0"/>
  </joint>

</robot>

